<body>
  <div class="card">
    <div id="step1">
      <h1>Повідомлення для тебе</h1>
      <p>Ти отримав(ла) це повідомлення тому що був(ла) важливим(ою) для мене цього року.</p>
      <button id="nextBtn">далі</button>
    </div>

    <div id="photo">
      <img src="ПРИВ.png" alt="Фото для тебе">
      <div class="caption">Дякую, що ти є. Нехай наступний рік буде ще теплішим.</div>
    </div>
  </div>

  <audio id="audio" src="МУЗ.mp3"></audio>

  <script>
    const nextBtn = document.getElementById('nextBtn');
    const step1 = document.getElementById('step1');
    const photo = document.getElementById('photo');
    const audio = document.getElementById('audio');

    nextBtn.addEventListener('click', async () => {
      step1.style.display = 'none';
      photo.style.display = 'block';
      try {
        await audio.play();
      } catch (err) {
        console.log("Автовідтворення заблоковане, натисни кнопку Play.");
      }
    });

    // Сніг
    function createSnowflake() {
      const snowflake = document.createElement('div');
      snowflake.classList.add('snowflake');
      snowflake.textContent = '❄';
      snowflake.style.left = Math.random() * window.innerWidth + 'px';
      snowflake.style.fontSize = (Math.random() * 10 + 10) + 'px';
      snowflake.style.opacity = Math.random();
      snowflake.style.animationDuration = (Math.random() * 5 + 5) + 's';
      document.body.appendChild(snowflake);

      setTimeout(() => {
        snowflake.remove();
      }, 10000);
    }

    setInterval(createSnowflake, 200);
  </script>
</body>
